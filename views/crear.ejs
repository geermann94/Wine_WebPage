<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs')  %> 
  
  <!-- Own Stylesheet -->
  <link rel="stylesheet" href="/css/app.css">

	<title>Crear-producto</title>
</head>
<body>

  <!-- Header -->
  <header class="main-header">
    <%- include('partials/header.ejs') %> 
  </header>            
  <!-- /Header -->

  <div class="margin">
    <% if (typeof errors != "undefined"){ %> 
        <p  style="color: red;"> ERROR !</p>
        <ul>
            <% for(let i = 0; i < errors.length; i++) {%> 
                <li> 
                    <%= errors[i].msg %> 
                </li>
            <% } %> 
        </ul>
    <% } %> 
  </div>  

  <div class="margin">
    <h2>CREAR UN PRODUCTO</h1>
      
      <form action="/product/crear" method="POST">

        <div class="form-group">
            <label for="">ID</label>
            <input type="number" name="ID" value="" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group">
            <label for="">Nombre</label>
            <input type="text" name="Nombre" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group">
            <label for="">Descripcion</label>
            <input type="text" name="Descripcion" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>

        <div class="form-group">
            <label for="">Precio</label>
            <input type="number" name="Precio" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group">
          <label for="">Descuento</label>
          <input type="number" max="100" min="0" name="Descuento" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group">
          <label for="">Categoria</label>
          <select class="form-control" name="Categoria">
            <option>None</option>
            <option>in-sale</option>
          </select>
        </div>

        <div class="form-group">
          <label for="">Image</label>
          <input type="text" name="Imagen" value="img-default.jpg" class="form-control" id="exampleInputPassword1">
        </div>
        
        <button type="submit" class="btn btn-outline-dark">Submit</button>
        
    </form>

  </div>


    <%- include('partials/jqueryPopper.ejs')  %> 

</body>
</html>